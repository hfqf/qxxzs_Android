<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/contact_edit_bg_name">

        <TextView
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="车主名:"
            android:id="@+id/contact_info_cell_tip"
            android:textColor="#000000"
            android:textSize="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="left|center_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <EditText
            android:textColor="@color/colorBlack"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:id="@+id/contact_info_cell_content"
            android:layout_weight="1"
            android:text=""
            android:gravity="left|center_vertical"
            android:textSize="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/contactborder"
            android:inputType="text" />
        <ImageView
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_weight="2"
            android:src="@drawable/car_v"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:id="@+id/contact_carnum_v"
            android:layout_marginRight="10dp"
            android:textSize="14dp"
            />
    </LinearLayout>


    </LinearLayout>

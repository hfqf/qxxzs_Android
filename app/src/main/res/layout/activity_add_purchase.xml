<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="5.5">
    <LinearLayout
        android:id="@+id/ResetPwdActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.points.autorepar.activity.ResetPwdActivity"
        android:background="@color/colorWhite">


        <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="@dimen/navi_bar_high"
            android:background="@color/material_blue"
            android:orientation="horizontal">
            <LinearLayout android:layout_width="match_parent"
                android:layout_height="44dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
                <Button
                    android:id="@+id/common_navi_back"
                    android:layout_width="100dp"
                    android:layout_height="44dp"
                    android:textColor="@color/colorWhite"
                    android:textSize="16dp"
                    android:paddingLeft="-30dp"
                    android:gravity="center"
                    android:text="返回"
                    android:visibility="visible"
                    android:background="@color/common_clear">
                </Button>
                <TextView android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="-20dp"
                    android:text="14"
                    android:id="@+id/common_navi_num"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textSize="12dp"
                    android:textColor="@color/mdtp_white"
                    android:background="@drawable/boder_navi_num"/>

                <TextView android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:id="@+id/common_navi_title"
                    android:text="@string/tab2_name"
                    android:textColor="@color/colorWhite"
                    android:textSize="18dp"

                    android:gravity="center"
                    />


                <Button
                    android:id="@+id/common_navi_add"
                    android:layout_width="50dp"
                    android:layout_height="44dp"
                    android:textColor="@color/mdtp_white"
                    android:textSize="16dp"
                    android:paddingRight="-20dp"
                    android:gravity="center"
                    android:text="入库"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:background="@color/common_clear"/>
                <ImageView
                    android:id="@+id/common_navi_control"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:textColor="@color/mdtp_white"
                    android:textSize="16dp"
                    android:scaleType="center"
                    android:paddingRight="0dp"

                    android:layout_marginTop="3dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"

                    android:src="@drawable/settingmore"/>
            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="商品名称"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />

            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/name"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"
                android:layout_marginRight="10dp" />
        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="分类"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <TextView
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"
                android:id="@+id/sort"
                android:layout_marginRight="10dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="默认售价"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/saleprice"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"

                android:layout_marginRight="10dp" />

        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="成本价"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:enabled="false"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/curprice"
                android:layout_weight="0.7"
                android:hint="系统根据历史进价自动生成"
                android:textSize="16dp"

                android:layout_marginRight="10dp" />

        </LinearLayout>


        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="条形码"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/code"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"
                android:layout_marginRight="10dp" />
            <Button
                android:layout_width="30dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:id="@+id/scancode"
                android:background="@drawable/icon_scan"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="单位"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/count"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"

                android:layout_marginRight="10dp" />

        </LinearLayout>

        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="库存预警值"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/jgcount"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"

                android:layout_marginRight="10dp" />

        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:text="商品备注"
                android:layout_width="120dp"
                android:layout_height="20dp"
                android:layout_weight="0.3"
                android:paddingLeft="10dp"
                android:gravity="left|center_vertical"
                android:textColor="@color/colorBlack"
                android:textSize="16dp" />
            <EditText
                android:textColor="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="3dp"
                android:layout_height="20dp"
                android:inputType="textPersonName"
                android:background="@drawable/contactborder"
                android:ems="10"
                android:id="@+id/mark"
                android:layout_weight="0.7"
                android:hint="请填写"
                android:textSize="16dp"

                android:layout_marginRight="10dp" />

        </LinearLayout>
        <View
            android:layout_marginTop="5dp"
            android:layout_height="10dp"
            android:layout_width="match_parent"
            android:background="@color/corlorBorder"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="0dp"
            android:background="@color/colorWhite"
            android:layout_below="@+id/register_name_bg"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:background="@color/colorWhite"
                android:layout_below="@+id/register_name_bg"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true">
                <TextView
                    android:text="图片:"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:paddingLeft="10dp"

                    android:gravity="left|center_vertical"
                    android:textColor="@color/colorBlack"
                    android:textSize="16dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="right">

                    <Button
                        android:id="@+id/addlogo"
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:paddingTop="-10dp"
                        android:text="添加"
                        android:textColor="@color/black"
                        android:textSize="13dp" />
                </LinearLayout>

            </LinearLayout>
            <GridView
                android:id="@+id/gv_show"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:horizontalSpacing="10dp"
                android:listSelector="#ffffff"
                android:numColumns="3"
                android:verticalSpacing="10dp"></GridView>
        </LinearLayout>



    </LinearLayout>

</ScrollView>
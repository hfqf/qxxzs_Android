<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.points.autorepar.activity.repair.RepairInfoEditActivity">

    <include layout="@layout/common_navigationbar"
        android:id="@+id/id_repair_add" />

    <ImageButton
        android:id="@+id/contact_add_headurl"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@drawable/appicon"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="点击修改头像"/>

    <ListView
        android:windowSoftInputMode="adjustPan"
        android:id="@+id/repair_info_listView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="5dp"
        android:divider="#bbccc0"
        />
</LinearLayout>

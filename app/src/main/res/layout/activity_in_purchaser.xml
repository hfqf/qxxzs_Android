<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical" >


    <include layout="@layout/common_navigationbar"
        android:id="@+id/contact_adduser_navi" />
    <LinearLayout
        android:id="@+id/contact_list_cell_show_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/headurl"
            android:padding="2dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/appicon"/>
            <LinearLayout
                android:id="@+id/contact_list_cell_show_desc"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/name"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:layout_gravity="left"
                    android:textSize="13dp"
                    android:textColor="@color/mdtp_light_gray"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:text="hhhh"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:orientation="horizontal">
                <TextView
                    android:id="@+id/price"
                    android:layout_width="fill_parent"
                    android:layout_height="30dp"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:textColor="@color/mdtp_light_gray"
                    android:layout_marginLeft="5dp"
                    android:textSize="10dp"
                    android:text="奥迪A6L"/>
                    <TextView
                        android:id="@+id/num"
                        android:layout_width="fill_parent"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:textColor="@color/text_red"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textSize="10dp"
                        android:text="奥迪A6L"/>
            </LinearLayout>

            </LinearLayout>




    </LinearLayout>

    <View android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#cccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/mdtp_light_gray"
            android:layout_gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textSize="14dp"
            android:hint="必填"
            android:text="供应商"/>
        <TextView
            android:id="@+id/applyname"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textColor="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:gravity="left|center_vertical"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/border_green_circle"
            android:hint="必填"/>

    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:text="采购价格"/>
        <EditText
            android:background="@drawable/border_green_circle"
            android:id="@+id/applyprice"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:textColor="@color/mdtp_light_gray"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:layout_marginTop="3dp"
            android:hint="输入采购单价"/>
           />
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#cccccc"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:textColor="@color/mdtp_light_gray"
            android:layout_marginLeft="5dp"
            android:layout_gravity="left"
            android:textSize="14dp"
            android:text="采购数量"/>
        <EditText
            android:background="@drawable/border_green_circle"
            android:id="@+id/applynum"
            android:layout_width="fill_parent"
            android:layout_height="25dp"
            android:layout_weight="1"
            android:layout_marginTop="3dp"
            android:textColor="@color/mdtp_light_gray"
            android:layout_marginRight="5dp"
            android:textSize="14dp"
            android:hint="输入采购数量"/>
    </LinearLayout>
    <View android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:background="#cccccc"/>


</LinearLayout>
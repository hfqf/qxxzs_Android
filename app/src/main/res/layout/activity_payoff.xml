<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/common_navigationbar"
        android:id="@+id/id_query_tiped" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#66000000"
                android:id="@+id/tv1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#66000000"
                android:id="@+id/tv2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="优惠金额:"
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp" />
                <EditText
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/ed_discount"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical|right"
                    android:layout_marginRight="10dp"
                    android:numeric="integer"
                    android:textSize="14dp"
                    android:background="@android:drawable/edit_text"
                    android:hint="请输入优惠金额" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="挂账金额:"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp" />
                <EditText
                    android:textColor="#000000"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/edit_nopaynum"
                    android:layout_marginTop="10dp"
                    android:numeric="integer"
                    android:layout_marginRight="10dp"
                    android:background="@android:drawable/edit_text"
                    android:gravity="right|center_vertical"
                    android:textSize="14dp"
                    android:hint="请输入挂账金额" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lin1"
                android:layout_height="50dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="现金"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="12dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                <ImageView

                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/img_1"

                    android:layout_marginRight="10dp"

                    android:layout_gravity="right|center_vertical|center_horizontal"
                    android:src="@mipmap/circular_check" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lin2"
                android:layout_height="50dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="会员卡"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="12dp"
                        android:textColor="#2e2a2a"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_2"

                        android:layout_marginRight="10dp"

                        android:layout_gravity="right|center_vertical|center_horizontal"
                        android:src="@mipmap/circular_check" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lin3"
                android:layout_height="50dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="微信"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="12dp"
                        android:textColor="#2e2a2a"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_3"

                        android:layout_marginRight="10dp"

                        android:layout_gravity="right|center_vertical|center_horizontal"
                        android:src="@mipmap/circular_check" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/lin4"
                android:layout_height="50dp">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="支付宝"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="12dp"
                        android:textColor="#2e2a2a"
                        android:layout_marginLeft="10dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="right|center_vertical|center_horizontal"
                    android:layout_weight="1">
                    <ImageView

                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_4"

                        android:layout_marginRight="10dp"

                        android:layout_gravity="right|center_vertical|center_horizontal"
                        android:src="@mipmap/circular_check" />
                </LinearLayout>
            </LinearLayout>




            <TextView
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/tv3" />


            <Button
                android:text="确认支付"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"

                android:textColor="@color/colorWhite"
                android:id="@+id/bt_pay"
                android:layout_marginRight="40dp"
                android:layout_height="44dp"
                android:textSize="18dp"

                android:background="@color/material_blue" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

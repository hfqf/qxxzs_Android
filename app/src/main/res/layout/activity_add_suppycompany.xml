<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.points.autorepar.activity.contact.ContactAddNewActivity">
    <include layout="@layout/common_navigationbar"
        android:id="@+id/contact_adduser_navi" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="供应商:"
                    android:id="@+id/textView1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                     />
                <EditText
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/applycompany"
                    android:background="@drawable/contactborder"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:hint="必填,请输入供应商" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="联系人:"
                    android:id="@+id/textView2"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <EditText
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/name"
                    android:background="@drawable/contactborder"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:hint="必填,请输入联系人" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="手机号:"
                    android:id="@+id/textView3"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp" />
                <EditText
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:id="@+id/tel"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/contactborder"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:hint="必填,请输入手机号" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="地址:"
                    android:id="@+id/textView4"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <EditText
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/address"
                    android:background="@drawable/contactborder"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:hint="请输入地址" />


                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="备注:"
                    android:id="@+id/textView5"
                    android:layout_marginTop="10dp"
                    android:textSize="14dp"
                    android:textColor="#2e2a2a"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                <EditText
                    android:textColor="@color/colorBlack"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:id="@+id/mark"
                    android:background="@drawable/contactborder"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="14dp"
                    android:hint="请输入备注" />

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>
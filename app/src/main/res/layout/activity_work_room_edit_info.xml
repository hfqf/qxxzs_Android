<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.points.autorepar.activity.workroom.WorkRoomEditInfoActivity">


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="@dimen/navi_bar_high"
        android:background="@color/material_blue"
        android:orientation="horizontal">
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">
            <Button
                android:id="@+id/common_navi_back"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:textColor="@color/colorWhite"
                android:textSize="16dp"
                android:paddingLeft="-30dp"
                android:gravity="center"
                android:text="返回"
                android:visibility="visible"
                android:background="@color/common_clear">
            </Button>
            <TextView android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="-20dp"
                android:text="14"
                android:id="@+id/common_navi_num"
                android:visibility="invisible"
                android:gravity="center"
                android:textSize="12dp"
                android:textColor="@color/mdtp_white"
                android:background="@drawable/boder_navi_num"/>

            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:id="@+id/common_navi_title"
                android:text="@string/tab2_name"
                android:textColor="@color/colorWhite"
                android:textSize="18dp"
                android:gravity="center"
                />


            <Button
                android:id="@+id/common_navi_bt"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:textColor="@color/mdtp_white"
                android:textSize="12dp"
                android:paddingRight="0dp"
                android:gravity="center"
                android:text="开启手动录入"
                android:layout_marginLeft="0dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/common_clear"/>
            <Button
                android:id="@+id/common_navi_add"
                android:layout_width="80dp"
                android:layout_height="44dp"
                android:textColor="@color/mdtp_white"
                android:textSize="16dp"
                android:paddingRight="-20dp"
                android:gravity="center"
                android:text="添加"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:background="@color/common_clear"/>
        </LinearLayout>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/workroom_edit_leftbtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textSize="18dp"
                android:text="车辆详情"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/colorTabbarTitleNormal" />

            <Button
                android:id="@+id/workroom_edit_rightbtn"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="#ffffff"
                android:textSize="18dp"
                android:text="收费项目"
                android:textColor="@color/colorTabbarTitleNormal"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:orientation="vertical">
            <View
                android:id="@+id/workroom_index_icon"
                android:layout_width="10dp"
                android:layout_height="2dp"
                android:background="@color/material_blue">
            </View>
        </LinearLayout>
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:background="@color/color4"
        android:id="@+id/work_room_viewpager"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:layout_height="0dp"/>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/workroom_totalprice_text"
        android:layout_height="40dp"
        android:textColor="@color/material_blue"
        android:gravity="right|center_vertical"
        android:textSize="20dp"
        android:text="总计:1840"
        android:layout_marginRight="10dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/workroom_bottom"
            android:orientation="horizontal">

            <Button
                android:id="@+id/workroom_edit_bottom_leftbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_light_blue"
                android:textSize="18dp"
                android:text="提交结账"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="@color/mdtp_white" />

            <Button
                android:id="@+id/workroom_edit_bottom_rightbtn"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/material_blue"
                android:textSize="18dp"
                android:text="保存编辑"
                android:textColor="@color/mdtp_white"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
